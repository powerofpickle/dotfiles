#!/bin/sh
set -eu

script_dir=$(dirname -- "$0")
calc_dir=$(dirname -- "$script_dir")

uv --directory "$calc_dir" sync

. "$calc_dir/.venv/bin/activate"

exec ipython \
    --TerminalIPythonApp.display_banner=False \
    --InteractiveShell.confirm_exit=False \
    --TerminalInteractiveShell.true_color=True \
    -i "$calc_dir/calc_imports.py" \
    "$@"
